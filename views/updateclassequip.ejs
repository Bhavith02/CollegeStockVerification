<%- include('partials/header1')%>
<div class="container">
  <a href="/classEquipdetails"><i class="fas fa-angle-double-left">Go Back</i></a>
  <fieldset>
    <form method="post" id="update_class_equip">
      <!-- Form Name -->
      <legend>
        <center>
          <h2><b>Update Classroom Equipment Details</b></h2>
        </center>
      </legend><br>
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label">Class ID</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="hidden" name="id" value="<%= classequiplist._id %>">
            <input name="class_id" value="<%= classequiplist.class_id %>" placeholder="Classroom ID" class="form-control" type="text">
          </div>
        </div>
      </div>
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label">Room no</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input name="room_no" value="<%= classequiplist.room_no %>" placeholder="Room Number" class="form-control" type="text">
          </div>
        </div>
      </div>


      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label">Item Name</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input name="item_name" value="<%= classequiplist.item_name %>" placeholder="Item Name" class="form-control" type="text">
          </div>
        </div>
      </div>
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label">Company Name</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input name="company_name" value="<%= classequiplist.company_name %>" placeholder="Model Number" class="form-control" type="text">
          </div>
        </div>
      </div>
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label">Model Number</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input name="model_no" value="<%= classequiplist.model_no %>" placeholder="Model Number" class="form-control" type="text">
          </div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-4 control-label">DOI</label>
        <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input name="doi" value="<%= classequiplist.doi %>" placeholder="Date of Installation" class="form-control" type="text">
          </div>
        </div>
      </div>
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label">Condition</label>
        <div class="col-md-4 selectContainer">
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
            <select name="condition" value="<%= classequiplist.condition %>" class="form-control selectpicker" >
              <option >Select Condition</option>
              <option >Working</option>
              <option >Repair</option>
              <option >Scrap</option>
            </select>
          </div>
        </div>
      </div>
      <!-- Select Basic -->
      <!-- Success message -->
      <!-- Button -->
      <div class="form-group">
        <div class="col-lg-6 Others">
          <form action="/submit" method="post">
            <button type="submit" class="btn btn-warning ">UPDATE</button>
          </form>
        </div>
      </div>
    </form>
    </fieldset>
</div>
</div><!-- /.container -->



<%- include('partials/footer1')%>
